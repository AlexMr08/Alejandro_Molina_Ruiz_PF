<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="@string/admin_home"
    app:startDestination="@id/adminHomeFragment">

    <fragment
        android:id="@+id/adminHomeFragment"
        android:name="com.example.practica_final.admin.AdminHomeFragment"
        android:label="@string/admin_home"
        tools:layout="@layout/fragment_admin_home">
        <action
            android:id="@+id/action_adminHomeFragment_to_adminAddCardFragment"
            app:destination="@id/adminAddCardFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminEventFragment"
        android:name="com.example.practica_final.admin.AdminEventFragment"
        android:label="@string/admin_events"
        tools:layout="@layout/fragment_admin_event">
        <action
            android:id="@+id/action_adminEventFragment_to_adminAddEventFragment"
            app:destination="@id/adminAddEventFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminAddCardFragment"
        android:name="com.example.practica_final.admin.AdminAddCardFragment"
        android:label="@string/admin_add_card"
        tools:layout="@layout/fragment_admin_add_card">
        <action
            android:id="@+id/action_adminAddCardFragment_to_adminHomeFragment"
            app:destination="@id/adminHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminOrderFragment"
        android:name="com.example.practica_final.admin.AdminOrderFragment"
        android:label="@string/admin_orders"
        tools:layout="@layout/fragment_admin_order" />
    <fragment
        android:id="@+id/adminAddEventFragment"
        android:name="com.example.practica_final.admin.AdminAddEventFragment"
        android:label="@string/admin_add_event"
        tools:layout="@layout/fragment_admin_add_event" />
    <fragment
        android:id="@+id/adminViewEventFragment"
        android:name="com.example.practica_final.admin.AdminViewEventFragment"
        android:label="fragment_admin_view_event"
        tools:layout="@layout/fragment_admin_view_event" />

</navigation>