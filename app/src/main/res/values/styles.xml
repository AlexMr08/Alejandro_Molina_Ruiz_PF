<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="h1" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="h1_bold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="h1_boton" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="h1_card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/aref_ruqaa</item>
    </style>

    <style name="h1_bold_card" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/aref_ruqaa</item>
    </style>



    <style name="texto" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="texto_bold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="carta" parent="Theme.Practica_Final">
        <item name="cardCornerRadius">@dimen/card_radius</item>
        <item name="cardElevation">2dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardBackgroundColor">#CDEFEFEF</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="imagen_cuadrada_mediana" parent="Theme.AppCompat">
        <item name="android:layout_width">@dimen/imagen_mediana</item>
        <item name="android:layout_height">@dimen/imagen_mediana</item>
    </style>

    <style name="imagen_mediana" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imagen_mediana</item>
    </style>

    <style name="imagen_cuadrada_grande" parent="Theme.AppCompat">
        <item name="android:layout_width">@dimen/imagen_grande</item>
        <item name="android:layout_height">@dimen/imagen_grande</item>
    </style>

    <style name="imagen_grande" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imagen_grande</item>
    </style>

    <style name="imagen_pequenha">
        <item name="android:layout_width">@dimen/imagen_pequeña</item>
        <item name="android:layout_height">@dimen/imagen_pequeña</item>
    </style>

    <style name="imagen_muy_pequenha">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imagen_muy_pequeña</item>
    </style>

    <style name="imagen_cuadrada_extra_grande" parent="Theme.AppCompat">
        <item name="android:layout_width">@dimen/imagen_extra_grande</item>
        <item name="android:layout_height">@dimen/imagen_extra_grande</item>
    </style>

    <style name="imagen_extra_grande" parent="Theme.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/imagen_extra_grande</item>
    </style>
</resources>