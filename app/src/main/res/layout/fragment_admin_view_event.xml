<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminViewEventFragment" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fave_rv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <ImageView
        android:id="@+id/fave_img"
        style="@style/imagen_cuadrada_mediana"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_baseline_location_on_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fave_nom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        android:textAppearance="@style/h1_bold"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fave_img"
        app:layout_constraintTop_toTopOf="@+id/fave_img" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="@string/admin_evento_texto"
        android:textAppearance="@style/texto"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fave_img"
        app:layout_constraintTop_toBottomOf="@+id/fave_img" />

    <TextView
        android:id="@+id/fave_aforo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@style/texto"
        app:layout_constraintStart_toStartOf="@+id/fave_nom"
        app:layout_constraintTop_toBottomOf="@+id/fave_nom" />

    <TextView
        android:id="@+id/fave_pre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textAppearance="@style/texto"
        app:layout_constraintStart_toStartOf="@+id/fave_aforo"
        app:layout_constraintTop_toBottomOf="@+id/fave_aforo" />

    <TextView
        android:id="@+id/fave_fec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/texto"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/fave_img"
        app:layout_constraintEnd_toEndOf="@+id/fave_nom" />
</androidx.constraintlayout.widget.ConstraintLayout>